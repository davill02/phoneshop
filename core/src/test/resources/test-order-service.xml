<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="jdbcOrderDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.es.core.model.order.JdbcOrderDao"/>
    </bean>
    <bean id="jdbcPhoneDao" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.es.core.model.phone.JdbcPhoneDao"/>
    </bean>
    <bean id="jdbcTemplate" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.springframework.jdbc.core.JdbcTemplate"/>
    </bean>


    <bean id="orderService" class="com.es.core.order.OrderServiceImpl">
        <property name="phoneDao" ref="jdbcPhoneDao"/>
        <property name="orderDao" ref="jdbcOrderDao"/>
    </bean>


</beans>